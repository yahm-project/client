<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <Button
            android:id="@+id/btnStartSavingStretches"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="start_saving_stretches"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnStopSavingStretches"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:text="stop_saving_stretches"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnStartSendingStretches"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="start_sending_stretches"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnStopSendingStretches"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:text="stop_sending_stretches"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnTestClassifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST_CLASSIFIER" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>