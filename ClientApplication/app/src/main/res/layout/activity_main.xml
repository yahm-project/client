<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/spotHole"
            android:layout_width="382dp"
            android:layout_height="111dp"
            android:text="@string/spotHole" />

        <Button
            android:id="@+id/spotManHole"
            android:layout_width="379dp"
            android:layout_height="111dp"
            android:text="@string/manHole" />

        <Button
            android:id="@+id/spotBack"
            android:layout_width="382dp"
            android:layout_height="111dp"
            android:text="@string/spotBack" />

        <Button
            android:id="@+id/spotRoadJoint"
            android:layout_width="382dp"
            android:layout_height="111dp"
            android:text="@string/roadJoint" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>